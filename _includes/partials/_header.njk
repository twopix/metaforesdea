{# get language #}


  <div class="page-wrapper">
    <!-- Preloader -->
    <div class="preloader">
      <div class="icon"></div>
    </div>

    <!-- Main Header -->
    <header class="main-header">
      <!-- Header Top -->
      <div class="header-top">
        <div class="auto-container">
          <div class="inner clearfix">
            <div class="top-left">
              {# <ul class="social-links clearfix">
                <li class="social-title">{{'Follow Us' | i18n }}:</li>
                {% for name, url in site.social %}
                <li><a href="{{ url }}" target="_blank"><span class="fab fa-{{ name }}-f"></span></a></li>
                {% endfor %}
              </ul> #}
            </div>

            <div class="top-right">
              <ul class="info clearfix">
                <li class="search-btn"><button type="button" class="theme-btn search-toggler"><span class="fa fa-search"></span></button></li>
                <li><a href="tel:{{ site.phone | replace(' ', '' ) }}"><span class="icon fa fa-phone-alt"></span> {{ 'call_phone' | i18n({ phone: site.phone }) }} </a></li>
                <li><a href="mailto:{{site.email}}"><span class="icon fa fa-envelope"></span> Email:&nbsp;{{site.email}}</a></li>
{# loop though site.languages #}
{% for lgg in site.languages %}
  {# set translatedUrl to the homepage of that language by default #}
  {% set translatedUrl = "/" + lgg.code + "/" %}
  {# set current language class #}
  {% if lgg.code != locale  %}
                <li class="c-lggnav__item"><a class="c-lggnav__link  {{ activeClass }}" href="{{ translatedUrl | replace('gr/', '') }}">{{ lgg.label }}</a></li>
  {% endif %}
{% endfor %}
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Header Upper -->
      <div class="header-upper">
        <div class="auto-container">
          <div class="inner-container clearfix">
            {# Logo  #}
            <div class="logo-box">
              <div class="logo"><a href="{{homepage[0].url}}" title="{{site[locale].metaTitle}}"><img
                    src="/assets/images/steat-logo-w.svg" alt="{{site[locale].metaTitle}}"
                    title="{{site[locale].metaTitle}}"></a></div>
            </div>

            {# Nav Box #}
            <div class="nav-outer clearfix">
              {# Mobile Navigation Toggler #}
              <div class="mobile-nav-toggler"><span class="icon flaticon-menu-1"></span></div>
              
              {% include 'partials/_navigation.njk' %}

              <div class="link-box clearfix">
                <div class="donate-link"><a href="{{contactObj.url}}" class="theme-btn btn-style-one"><span
                      class="btn-title">{{ contactObj.title }}</span></a></div>
                {# <div class="cart-link"><a href="shopping-cart.html" class="theme-btn"><span
                      class="icon flaticon-paper-bag"></span></a></div> #}
              </div>
            </div>
          </div>
        </div>
      </div>
      <!--End Header Upper-->

      <!-- Sticky Header  -->
      <div class="sticky-header">
        <div class="auto-container clearfix">
          <!--Logo-->
          <div class="logo pull-left">
            <a href="{{homepage[0].url}}" title=""><img src="/assets/images/steat-horizontal.svg" class="sticky-logo" alt="logo" title=""></a>
          </div>
          <!--Right Col-->
          <div class="pull-right">
            <!-- Main Menu -->
            <nav class="main-menu clearfix">
              <!--Keep This Empty / Menu will come through Javascript-->
            </nav><!-- Main Menu End-->
          </div>
        </div>
      </div><!-- End Sticky Menu -->

      <!-- Mobile Menu  -->
      <div class="mobile-menu">
        <div class="menu-backdrop"></div>
        <div class="close-btn"><span class="icon flaticon-cancel"></span></div>

        <nav class="menu-box">
          <div class="nav-logo"><a href="{{homepage[0].url}}"><img src="/assets/images/steat-horizontal.svg" alt="" title=""></a></div>
          <div class="menu-outer">
            <!--Here Menu Will Come Automatically Via Javascript / Same Menu as in Header-->
          </div>
          <!--Social Links-->
          <div class="social-links">
            <ul class="clearfix">
              {% for name, url in site.social %}
                <li><a href="{{ url }}" target="_blank"><span class="fab fa-{{ name }}-f"></span></a></li>
              {% endfor %}
              {# loop though site.languages #}
              {% for lgg in site.languages %}
                {# set translatedUrl to the homepage of that language by default #}
                {% set translatedUrl = "/" + lgg.code + "/" %}
                {# set current language class #}
                {% if lgg.code != locale  %}
                              <li class="c-lggnav__item"><a class="c-lggnav__link  {{ activeClass }}" href="{{ translatedUrl | replace('gr/', '') }}">{{ lgg.label }}</a></li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        </nav>
      </div><!-- End Mobile Menu -->
    </header>
    <!-- End Main Header -->

    <!--Search Popup-->
    <div id="search-popup" class="search-popup">
      <div class="close-search theme-btn"><span class="flaticon-cancel"></span></div>
      <div class="popup-inner">
        <div class="overlay-layer"></div>
        <div class="search-form">
            <div class="form-group">
                <div id="search"></div>
            </div>
          <br>
          <h3>{{"Recent Search Keywords" | i18n}}</h3>
          <ul class="recent-searches">
            <li><a href="#">ΣΤΕΑΤ</a></li>
            <li><a href="#">Μέλη</a></li>
            <li><a href="#">Εγκύκλιοι</a></li>
            <li><a href="#">Εγκύκλιος 1/2022</a></li>
            <li><a href="#">Προεδρικά Διατάγματα</a></li>
          </ul>

        </div>

      </div>
    </div>