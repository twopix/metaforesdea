{# get breadcrumbs path  #}
{% set breadCrumps = collections.all | eleventyNavigationBreadcrumb(eleventyNavigation.key, { includeSelf: false })  %}

<!-- Page Banner Section -->
<section class="page-banner">
    <div class="image-layer lazy-image" data-bg="url('/assets/images/background/bg-banner-1.jpg')"></div>
    <div class="bottom-rotten-curve"></div>
    <div class="auto-container">
        <h1>{{title}}</h1>
        <ul class="bread-crumb clearfix">
            {%- for entry in breadCrumps %}<li><a href="{{ entry.url }}">{{ entry.title}}</a></li> {%- endfor -%}
            <li class="active">{{title}}</li>
        </ul>
    </div>

</section>
<!--End Banner Section -->
